@model U7MVC.Photos
@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Додати фотографію</title>
</head>
<body>
    @using (Html.BeginForm("AddNewPhoto", "Galery", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Окраси</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
               
                @Html.Label("Опис")
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "textarea" })
                </div>
            </div>


            @Html.HiddenFor(model => model.UserId)
            @Html.HiddenFor(model => model.isActive, new { Value = true })


            <input type="file" id="pic" name="pic" accept="image/*">

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Додати" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Певернутися", "Index")
    </div>
</body>
</html>
