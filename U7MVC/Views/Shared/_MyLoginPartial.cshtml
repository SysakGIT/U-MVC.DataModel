@using Microsoft.AspNet.Identity

@if (Session["UserName"] == null || Session["UserName"] == "")
{
    @Html.ActionLink("Зареєструватися", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
    @Html.ActionLink("Вхід", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })

}
else
{
    @Html.ActionLink("Вихід (" + Session["UserName"] + ")", "LogOff", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })

}