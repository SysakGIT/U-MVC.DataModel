@model U7MVC.News

@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Додати новину</title>
</head>
<body>
    @using (Html.BeginForm("AddNewsSave", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Окраси</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.Label("Тема")
            <div class="col-md-10">
                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
            </div>
            @Html.Label("Опис")
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "textarea" })
            </div>
        </div>


        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.isActive, new { Value = true })

        @Html.HiddenFor(model => model.CreatedDate, new { Value = DateTime.Now })

        <input type="file" id="pic" name="pic" accept="image/*">
       .TextBoxFor(model => model.Image, new { type = "file" })
        .ValidationMessageFor(model => model.Image)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Додати" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Певернутися", "Index")
    </div>
</body>
</html>
